<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Normal state -->
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="@color/colorGS"
                android:endColor="@color/colorGE"
                android:type="linear"
                android:centerX=".5"
                android:angle="90"
                android:gradientRadius="400"/>
            <stroke android:color="@color/colorLG" android:width="7dp"/>
            <corners android:radius="8dp"/>

        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="@color/colorGSP"
                android:endColor="@color/colorGEP"
                android:type="linear"
                android:centerX=".5"
                android:angle="90"
                android:gradientRadius="450"/>
            <stroke android:color="@color/colorDG" android:width="7dp"/>
            <corners android:radius="8dp"/>

        </shape>
    </item>
</selector>